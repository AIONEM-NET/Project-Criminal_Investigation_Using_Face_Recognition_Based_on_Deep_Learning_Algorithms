<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="criminal.investigation.cctv">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/face_icon2"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/face_icon2"
        android:supportsRtl="true"
        android:theme="@style/Theme.FaceRecognition.NoActionBar">
        <activity
            android:name="criminal.investigation.SplashScreen"
            android:label="@string/app_name"
            android:exported="true"
            android:theme="@style/Theme.FaceRecognition.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="criminal.investigation.cctv.CCTVCameraActivity"
            android:theme="@style/Theme.FaceRecognition.Fullscreen"/>
        <activity android:name="criminal.investigation.LoginActivity" />
        <activity android:name="criminal.investigation.agent.AgentActivity" />
        <activity
            android:name="criminal.investigation.agent.ReportsActivity"
            android:label="Reports"
            android:theme="@style/Theme.FaceRecognition.NoActionBar"/>
    </application>

</manifest>